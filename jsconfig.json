{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "bundler",
        "lib": [
            "esnext",
            "dom"
        ],
        "target": "esnext",
        "checkJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/vite-plugins",
        "src/api",
        "src/lib"
    ]
}